# Production environment configuration (managed by infrastructure pipelines)
APP_ENV=production
NODE_ENV=production

API_GATEWAY_URL=https://api.finance-manager.example.com
AUTH_SESSION_SECRET=rotate-with-secrets-manager-production-secret
DATABASE_URL=postgresql://prod_user:prod_password@prod-db.cluster-xyz.us-west-2.rds.amazonaws.com:5432/finance_manager_prod?schema=public
REDIS_URL=rediss://prod-redis.finance-manager.example.com:6379/0
POSTHOG_API_KEY=phx_production_secret_token
PLAID_CLIENT_ID={{ secretsManager:finance_manager/prod/plaid_client_id }}
PLAID_SECRET={{ secretsManager:finance_manager/prod/plaid_secret }}
AZURE_OPENAI_API_KEY={{ secretsManager:finance_manager/prod/azure_openai_api_key }}
AZURE_OPENAI_ENDPOINT=https://finance-manager.openai.azure.com
AWS_REGION=us-west-2
AWS_SES_REGION=us-west-2
AWS_S3_REPORTS_BUCKET=finance-manager-prod-reports
TWILIO_ACCOUNT_SID={{ secretsManager:finance_manager/prod/twilio_account_sid }}
TWILIO_AUTH_TOKEN={{ secretsManager:finance_manager/prod/twilio_auth_token }}

NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_API_BASE_URL=https://app.finance-manager.example.com/api
NEXT_PUBLIC_POSTHOG_KEY=phc_production_public_token
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_SENTRY_DSN=https://prodPublicKey@o0.ingest.sentry.io/0
