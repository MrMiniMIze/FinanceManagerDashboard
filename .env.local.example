# ---------- Local development ----------
APP_ENV=local
NODE_ENV=development

# Backend/gateway + required server envs (use local placeholders if you don't run these services)
API_GATEWAY_URL=http://localhost:4000
AUTH_SESSION_SECRET=local-development-session-secret-32chars!!
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/finance_manager_local?schema=public
REDIS_URL=redis://localhost:6379/0

# Optional analytics/integrations for local
POSTHOG_API_KEY=phx_local_placeholder
PLAID_CLIENT_ID=PLAID_SANDBOX_CLIENT_ID
PLAID_SECRET=PLAID_SANDBOX_SECRET

# ---------- Azure OpenAI (needed for the AI chat) ----------
AZURE_OPENAI_API_KEY=local-openai-key                  # put your real key in .env.local
AZURE_OPENAI_ENDPOINT=https://dev-finance-manager.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name           # <-- REQUIRED: exact Azure *deployment name*
AZURE_OPENAI_API_VERSION=2024-08-01-preview            # or a version supported by your resource

# (If you ever want a non-Azure local fallback, you can also add:)
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://api.openai.com/v1

# ---------- AWS/Twilio (placeholders fine for local) ----------
AWS_REGION=us-west-2
AWS_SES_REGION=us-west-2
AWS_S3_REPORTS_BUCKET=finance-manager-local-reports
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=twilio-local-token

# ---------- Client-side (safe to expose) ----------
NEXT_PUBLIC_APP_ENV=local
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api     # ok if your gateway runs at 4000
NEXT_PUBLIC_POSTHOG_KEY=phc_local_public_token
NEXT_PUBLIC_POSTHOG_HOST=http://localhost:8000
NEXT_PUBLIC_SENTRY_DSN=
