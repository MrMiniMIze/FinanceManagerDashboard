#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

set -eu

echo "husky - running ci:verify (lint, typecheck, test, build)"

# Only enforce full verify in CI. Locally, skip to allow incremental work.
if [ -n "${CI:-}" ]; then
  npm run ci:verify
else
  echo "husky - skipping full ci:verify locally (run it in CI)."
fi
